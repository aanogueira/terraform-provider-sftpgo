terraform {
  required_providers {
    sftpgo = {
      source = "registry.terraform.io/drakkan/sftpgo"
    }
  }
}

provider "sftpgo" {
  host     = "http://localhost:8080"
  username = "admin"
  password = "password"
}

data "sftpgo_rules" "rules" {}

output "rules" {
  value = data.sftpgo_rules.rules
}